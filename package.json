{
  "name": "flixor",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "npm run build:core",
    "build:core": "npm run build --workspace=@flixor/core",
    "dev:core": "npm run dev --workspace=@flixor/core",
    "dev:landing": "npm run dev --workspace=landing",
    "build:landing": "npm run build --workspace=landing"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "dependencies": {
    "react-native-mmkv": "^4.0.0",
    "react-native-nitro-modules": "^0.31.2"
  }
}
